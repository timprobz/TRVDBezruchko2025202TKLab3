{{<layout}}
{{$content}}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Додати нову книгу</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/books/create">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="title" class="form-label">Назва книги *</label>
                            <input type="text" class="form-control" id="title" name="title" value="{{formData.title}}" required>
                        </div>
                        <div class="col-md-6">
                            <label for="author" class="form-label">Автор *</label>
                            <input type="text" class="form-control" id="author" name="author" value="{{formData.author}}" required>
                        </div>
                        <div class="col-md-4">
                            <label for="year" class="form-label">Рік видання *</label>
                            <input type="number" class="form-control" id="year" name="year" value="{{formData.year}}" min="1800" max="2024" required>
                        </div>
                        <div class="col-md-4">
                            <label for="genre" class="form-label">Жанр *</label>
                            <select class="form-select" id="genre" name="genre" required>
                                <option value="">Виберіть жанр</option>
                                {{#genres}}
                                <option value="{{this}}" {{#formData.genre}}{{#equals this formData.genre}}selected{{/equals}}{{/formData.genre}}>{{this}}</option>
                                {{/genres}}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">Статус *</label>
                            <select class="form-select" id="status" name="status" required>
                                {{#statuses}}
                                <option value="{{this}}" {{#formData.status}}{{#equals this formData.status}}selected{{/equals}}{{/formData.status}}>
                                    {{#equals this "available"}}Доступна{{/equals}}
                                    {{#equals this "unavailable"}}На руках{{/equals}}
                                </option>
                                {{/statuses}}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="isbn" class="form-label">ISBN</label>
                            <input type="text" class="form-control" id="isbn" name="isbn" value="{{formData.isbn}}">
                        </div>
                        <div class="col-md-6">
                            <label for="image" class="form-label">URL зображення</label>
                            <input type="url" class="form-control" id="image" name="image" value="{{formData.image}}">
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label">Опис книги</label>
                            <textarea class="form-control" id="description" name="description" rows="4">{{formData.description}}</textarea>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a href="/books" class="btn btn-secondary">Скасувати</a>
                                <button type="submit" class="btn btn-primary">Додати книгу</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/content}}
{{/layout}}